= link_to "<< Back", :action => "index"

%h1 Metrics

%h2= view_model.metric.name

%ul.metric-types
  - view_model.metric_types.each do |metric_type|
    - if metric_type.active?
      %li.metric-type.current
        = metric_type
    - else
      %li.metric-type
        = link_to metric_type, {:action => "update", "metric[metric_type]" => metric_type}, "data-method" => "patch"

.graph-placeholder

%table.metrics
  %thead
    %tr
      %th Date
      %th= view_model.metric.name
  %tbody
    - view_model.values.each do |value|
      %tr.data-point{"data-x" => value.occurred_at, "data-y" => value.value}
        %td
          = time_ago_in_words(value.occurred_at)
          ago
        %td
          = value.value
